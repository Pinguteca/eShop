{
  "extends": [
    "config:best-practices",
    "helpers:pinGitHubActionDigestsToSemver",
    ":semanticCommitScope(deps)",
    "mergeConfidence:all-badges",
    ":separateMultipleMajorReleases",
    ":assignAndReview(Pinguladora)"
  ],
  "baseBranchPatterns": [
    "develop"
  ],
  "labels": [
    "renovate"
  ],
  "prConcurrentLimit": 6,
  "prHourlyLimit": 2,
  "minimumReleaseAge": "3 days",
  "internalChecksFilter": "strict",
  "rangeStrategy": "bump",
  "separateMinorPatch": false,
  "timezone": "Europe/Madrid",
  "schedule": [
    "* 0-3 * * *"
  ],
  "automerge": false,
  "automergeSchedule": [
    "* 0-3 * * *"
  ],
  "forkProcessing": "enabled",
  "lockFileMaintenance": {
    "enabled": true,
    "extends": ["schedule:daily"],
    "automerge": true
  },
  "packageRules": [
    {
      "matchManagers": [
        "nuget"
      ],
      "groupName": "NuGet updates (per-service)",
      "matchFileNames": [
        "src/**",
        "services/**"
      ],
      "separateMajorMinor": true,
      "separateMultipleMajor": true
    },
    {
      "matchManagers": [
        "dockerfile"
      ],
      "groupName": "Docker image updates",
      "separateMajorMinor": true,
      "separateMultipleMajor": true
    },
    {
      "matchDatasources": [
        "github-tags"
      ],
      "matchPackageNames": [
        "^dotnet/aspire",
        "^dotnet/"
      ],
      "groupName": "Dotnet Aspire / dotnet org packages",
      "separateMajorMinor": false,
      "separateMultipleMajor": false
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchFileNames": [
        "**/*.csproj",
        "**/Dockerfile",
        ".github/workflows/**"
      ],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "matchManagers": [
        "nuget"
      ],
      "matchPackageNames": [
        "Microsoft.NET.Sdk",
        "Microsoft.AspNetCore.App"
      ],
      "groupName": "Microsoft SDKs (Second Tuesday Patch Updates)",
      "automerge": false,
      "schedule": [
        "* 3-6 8-14 * 3"
      ],
      "labels": [
        "Microsoft-SDKs",
        "needs-runtime-tests"
      ],
      "prCreation": "not-pending"
    }
  ],
  "enabledManagers": [
    "nuget",
    "dockerfile",
    "github-actions"
  ],
  "prBodyNotes": [
    "If this PR needs manual testing, add the `no-automerge` label or disable automerge in the repo Renovate config."
  ]
}