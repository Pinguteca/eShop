{
  "extends": [
    "config:best-practices",
    "helpers:pinGitHubActionDigestsToSemver",
    ":semanticCommitScope(deps)",
    "mergeConfidence:all-badges",
    ":separateMultipleMajorReleases",
    ":assignAndReview(Pinguladora)",
    ":approveMajorUpdates",
    ":label(renovate)",
    ":enablePreCommit",
    ":prNotPending",
    ":automergeMinor",
    ":automergeDigest",
    ":timezone(Europe/Madrid)",
    ":enableVulnerabilityAlertsWithAdditionalLabel(security)",
    ":rebaseStalePrs",
    ":pinSkipCi",
    ":prConcurrentLimit10",
    ":prHourlyLimitNone"

  ],
  "baseBranchPatterns": [
    "develop"
  ],
  "draftPR": true,
  "minimumReleaseAge": "14 days",
  "internalChecksFilter": "strict",
  "rangeStrategy": "bump",
  "separateMinorPatch": false,
  "schedule": [
    "* 0-3 * * *"
  ],
  "automergeSchedule": [
    "* 0-3 * * *"
  ],
  "forkProcessing": "enabled",
  "lockFileMaintenance": {
    "enabled": true,
    "extends": [
      "schedule:daily"
    ]
  },
  "enabledManagers": [
    "nuget",
    "dockerfile",
    "devcontainer",
    "github-actions",
    "pre-commit"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "pre-commit"
      ],
      "groupName": "Pre-commit updates",
      "labels": [
        "pre-commit"
      ]
    },
    {
      "matchManagers": [
        "nuget"
      ],
      "groupName": "NuGet updates (per-service)",
      "matchFileNames": [
        "src/**",
        "services/**"
      ],
      "separateMajorMinor": true,
      "separateMultipleMajor": true
    },
    {
      "matchManagers": [
        "dockerfile"
      ],
      "groupName": "Docker image updates",
      "separateMajorMinor": true,
      "separateMultipleMajor": true
    },
    {
      "matchDatasources": [
        "github-tags"
      ],
      "matchPackageNames": [
        "^dotnet/aspire",
        "^dotnet/"
      ],
      "groupName": "Dotnet Aspire / dotnet org packages",
      "separateMajorMinor": false,
      "separateMultipleMajor": false
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchFileNames": [
        "**/*.csproj",
        "**/Dockerfile",
        ".github/workflows/**"
      ],
      "automergeType": "branch"
    },
    {
      "matchManagers": [
        "nuget"
      ],
      "matchPackageNames": [
        "Microsoft.NET.Sdk",
        "Microsoft.AspNetCore.App"
      ],
      "groupName": "Microsoft SDKs (Second Tuesday Patch Updates)",
      "automerge": false,
      "schedule": [
        "* 3-6 8-14 * 3"
      ],
      "minimumReleaseAge": "0 days",
      "labels": [
        "Microsoft-SDKs",
        "needs-runtime-tests"
      ],
      "prBodyNotes": [
        "⚠️ These updates may require additional runtime testing to ensure compatibility."
      ]
    }
  ]
}